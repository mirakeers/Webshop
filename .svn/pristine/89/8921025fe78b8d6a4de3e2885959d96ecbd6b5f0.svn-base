* {
    box-sizing: border-box;
    font-family: 'Lato', sans-serif;
}

body {
    margin: 0;
}
header > div {
    position: relative;
}

h1 {
    font-size: 40px;
    font-weight: 700;
    letter-spacing: 0.6em;
    text-align: center;
    text-transform: uppercase;
    width: 75%;
    margin: 0 auto;
    padding: 0.5em 0;
    border-bottom: 1px solid #AAA;
}

header > div #toadmin {
    position: absolute;
    top: 1em;
    left: 5em;
}

header > div #cart {
    position: absolute;
    top: 1em;
    right: 5em;
    display: block;
    width: 50px;
    height: 50px;
    background-image: url(../img/cart.svg);
}

header > div #cart .amount {
    background-color: #f421ad;
    color: #FFF;
    line-height: 1.5;
    text-align: center;
    position: absolute;
    width: 25px;
    height: 25px;
    border-radius: 30px;
    bottom: 0;
    right: 0;
}

header > img {
    width: 100%;
}

main.nocontainer {
    background-color: #e6e6e6;
}

main div.sidebar {
    width: 250px;
    float: left;
    height: 100%;
    background-color: #e6e6e6;
    margin-top: 0;
}

main div.productsection {
    background-color: #f2f2f2;
    margin-left: 250px;
}

main ul.products {
    margin: 0;
    padding: 2em;
    list-style-type: none;
}

main ul.products > li {
    float: left;
    padding: 1em;
    width: 25%;
/*    min-width: 350px;*/
    margin-bottom: 7em;
    text-align: center;
}

main ul.products li .imagebox {
    width: 100%;
    position: relative;
    margin-bottom: 1em;
}

main ul.products li .imagebox .colors {
    position: absolute;
    bottom: 30px;
    left: 20px;
}


main ul.products li img,
main .imagethumbnails > div,
main .product-img img
{
    width: 100%;
    display: none;
}

main ul.products li img.visible,
main .imagethumbnails > div.visible,
main .product-img img.visible
{
    display: inline;
}

main ul.products li * {
    text-align: center;
}

main ul.products li h3 {
    font-size: 16px;
}

.imagethumbnails {
    float: left;
    width: 160px;
    margin-right: 20px;
}

.product-img {
    float: left;
    width: 400px;
    margin-right: 20px;
}

.product-information {
    margin-left: 600px;
    min-width: 250px;
}

.imagethumbnails a {
    display: block;
    padding: 0;
    font-size: 1px;
    margin-bottom: 20px;
    border: 1px solid #AAA;
    opacity: 0.6;
}
.imagethumbnails img {
    width: 100%;
}
.imagethumbnails a:hover, .imagethumbnails a.current {
    border: 1px solid #000;
    opacity: 1;
}

.product-img img {
    width: 100%;
    border: 1px solid #000;
}

.product-information p {
    font-size: 18px;
}


.counter {
    margin-bottom: 2em;
}
.counter > * {
    display: inline-block;
    margin-right: 0.5em;
    text-align: center;
}
.counter a {
    text-decoration: none;
    color: black;
    font-weight: 900;
    width: 25px;
    height: 25px;
    border: 1px solid black;
}

.btn-mb {
    margin-bottom: 2em;
}

table.cart {
    width: 100%;
}
table.cart th{
    text-align: left;
    font-weight: 400;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    padding-bottom: 0.5em;
}
table.cart thead tr {
    border-bottom: 1px solid #000;
}


table.cart tbody td{
    height: 200px;
    vertical-align: middle;
}

table.cart tbody tr {
    border-bottom: 1px solid #AAA;
}

table.cart tbody img{
    float: left;
    height: 100%;
    margin-right: 1em;
}
table.cart tbody h3 a {
    text-decoration: none;
    color: black;
}
table.cart tbody h3 a:hover {
    text-decoration: underline;
    color: #f421ad;
}
table.cart tbody input {
    margin-top: 2em;
}
table.cart tbody td:last-child h4 {
    font-weight: 700;
}

table.cart tfoot tr {
    background-color: #f2f2f2;
}

table.cart tr td:last-child, table.cart tr th:last-child {
    text-align: right;
    padding-right: 5em;
    width: auto;
}

table.cart tfoot tr td:first-child {
    text-align: right;
}
table.cart tfoot tr:first-child td:first-child {
    padding-right: 5em;
}

table.cart tfoot tr:first-child td{
    padding-top: 2em;
}
table.cart tfoot tr:last-child td{
    padding-bottom: 2em;
}





/*TABLE RESET*/

table,tbody, tfoot, thead, tr, th, td {
	margin: 0;
	padding: 0;
	border: 0;
	font: inherit;
	vertical-align: baseline;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}


.container {
    max-width: 1200px;
    padding: 5em 1em 2em 1em;
    margin: auto;
}

h5 {
    text-transform: uppercase;
    font-weight: 400;
    letter-spacing: 0.2em;
    margin: 2em 0 0.7em 0;
}
h2 {
    margin: 0 0 1em 0;
}

.price-small {
    font-weight: 100;
    font-size: 18px;
    margin: 0 0 1em 0;
}
.price-big {
    font-weight: 100;
    font-size: 54px;
    margin: 0;
}

.button {
    display: inline-block;
    border: 1px solid #000;
    width: auto;
    padding: 0.4em 2em 0.4em 2em;
    background-color: #FFF;
    font-weight: 300;
    letter-spacing: 0.3em;
    text-align: center;
    text-transform: uppercase;
    color: #000;
    text-decoration: none;
}
.button:hover, .counter a:hover {
    background-color: #f421ad;
    color: #FFF;
    cursor: pointer;
}
.colors {
    overflow: auto;
    list-style-type: none;
    margin: 0;
    padding: 0;
}
.colors li {
    float: left;
    padding: 0 10px 0 0; 
}
.colors li a  {
    display: block;
    text-indent: -9999px;
    overflow: hidden;
    width: 20px;
    height: 20px;
    border-radius: 50px;
    border: 1px solid #000;
}
.colors .current a {
    border: 2px solid #000;
}
.colors a:hover {
    border: 2px solid #000;
}

.singlecolor::before {
    content: "";
    display: inline-block;
    vertical-align: text-top;
    width: 20px;
    height: 20px;
    margin-right: 0.5em;
    border-radius: 50px;
    border: 1px solid #000;
}

.cf:before, .cf:after {
    content: " "; display: table;
}
.cf:after {
    clear: both;
}

/* Large Devices, Wide Screens */
@media only screen and (max-width : 1200px) {
    main ul.products > li {
        width: 33.33%;
    }
}

/* Medium Devices, Desktops */
@media only screen and (max-width : 992px) {
    main div.sidebar {
        width: auto;
        float: none;
    }
    main div.productsection {
        margin-left: 0;
    }
}

/* Small Devices, Tablets */
@media only screen and (max-width : 768px) {
    main ul.products > li {
        width: 50%;
    }
}

/* Extra Small Devices, Phones */ 
@media only screen and (max-width : 480px) {
    main ul.products > li {
        width: 100%;
    }
}